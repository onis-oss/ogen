{{- define "uri/encoders" }}

func (v {{ $.Go }}) encodeURI(e uri.Encoder) error {
	{{- range $f := $.Fields }}
	{{- if $f.Spec }}
		if err := e.EncodeField({{ quote $f.Spec.Name }}, func(e uri.Encoder) error {
			{{- template "uri/encode" elem $f.Type (printf "v.%s" $f.Name) }}
		}); err != nil {
			return errors.Wrap(err, {{ printf "decode field %q" $f.Spec.Name | quote }})
		}
	{{- end }}
	{{- end }}
	return nil
}

func (v *{{ $.Go }}) decodeURI(d uri.Decoder) error {
	if v == nil {
		return errors.New({{ printf "invalid: unable to decode %s to nil" $.Name | quote }})
	}
	{{- if $.HasDefaultFields }}
	v.setDefaults()
	{{- end }}
	return d.DecodeFields(func(name string, d uri.Decoder) error {
		switch name {
		{{- range $f := $.Fields }}
		{{- if $f.Spec }}
		case {{ quote $f.Spec.Name }}:
			{{- template "uri/decode" elem $f.Type (printf "v.%s" $f.Name) }}
		{{- end }}
		{{- end }}
		default:
			return errors.Errorf(`unexpected field %q`, name)
		}
	})
}

{{ end }}
